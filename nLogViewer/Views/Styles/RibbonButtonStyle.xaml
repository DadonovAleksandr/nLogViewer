<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="FilterButtonStyle" TargetType="{x:Type RibbonToggleButton}">
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        
        <Setter Property="ToolTipFooterTitle" Value="Использование фильтра"/>
        <Setter Property="ToolTipFooterDescription" Value="Когда фильтр включен, события будут отображаться в логах"/>
        <Setter Property="ToolTipFooterImageSource" Value="/Infrastructure/Resources/Images/Small/Info.png"/>
        
    </Style>
    
    <Style x:Key="SearchButtonStyle" TargetType="{x:Type RibbonToggleButton}">
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        
        <Setter Property="ToolTipFooterTitle" Value="Включение фильтра"/>
        <Setter Property="ToolTipFooterDescription" Value="Когда фильтр включен, события будут отображаться в логах"/>
        <Setter Property="ToolTipFooterImageSource" Value="/Infrastructure/Resources/Images/Small/Info.png"/>
        
    </Style>
    
</ResourceDictionary>